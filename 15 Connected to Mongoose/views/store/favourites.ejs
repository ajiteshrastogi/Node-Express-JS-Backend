<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Mart</title>
  <link rel="stylesheet" href="/home.css" />
</head>
<body>
  <%- include('../partials/navbar') %> <!-- Navbar Partial -->

  <section class="hero">
    <p>Here are your favourite products</p>
  </section>

  <main>
    <section class="products">
      <div class="product-container">
        <% favouriteProducts.forEach(product => { %>
          <div class="product-card">
            <img src="<%= product.image || '/default-image.jpg' %>" alt="<%= product.name %>">
            <div class="product-info">
              <h3><%= product.name %></h3>
              <p class="description"><%= product.description %></p>
              <p class="price">₹<%= product.price %></p>
              <p class="rating">⭐ <%= product.rating %></p>
            </div>
            <div class="button-group">
              <a href="#" class="btn add-to-cart">Add to Cart</a>
              <form action="/favourites/remove/<%= product._id %>" method="POST">
                <button type="submit" class="btn remove-from-fav">Remove from Fav</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    </section>
  </main>
</body>
</html>
